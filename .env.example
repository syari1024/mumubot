# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Client ID
CLIENT_ID=your_client_id_here

# Discord Guild ID (Server ID)
GUILD_ID=your_guild_id_here

# Docker Configuration
# Minecraft Bedrock サーバーコンテナ名
CONTAINER_NAME=minecraft-bedrock

# ホスト上の Minecraft データマウントパス
# Docker コンテナの /data ボリュームがマウントされている場所
DATA_MOUNT_PATH=/path/to/minecraft-data

# バックアップ保存ディレクトリ
BACKUP_DIR=./backups

# ホワイトリスト管理用 allowlist.json ローカルパス
ALLOWLIST_PATH=./allowlist.json
